generator client {
  provider = "prisma-client"
  output   = "../server/libs/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid())
  username String
  password String

  files File[]
}

enum FileType {
  FILE
  DIR
}

model File {
  id              String @unique
  filename         String
  path            String
  fsname          String?
  mimetype        String?
  size            Int?
  thumbnailPath   String?
  type            FileType

  ownerId String
  owner User @relation(fields: [ownerId], references: [id])

  parentId  String?
  parent    File?   @relation("FileRelation", fields: [parentId], references: [id])
  children  File[]  @relation("FileRelation")

  createdAt DateTime @default(now())
}